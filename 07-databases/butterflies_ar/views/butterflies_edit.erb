<h2>Edit Butterfly</h2>

<form action="/butterflies/<%= @butterfly["id"] %>" method="post">
	<label>
		Name:
		<input type="text" name="name" value="<%= @butterfly["name"] %>" placeholder="Butterfly Name" required="required" autofocus="autofocus">
	</label>

	<label>
		Family:
		<input type="text" name="family" value="<%= @butterfly["family"] %>" placeholder="Butterfly Family Name">
	</label>

	<label>
		Image:
		<input type="url" name="image" value="<%= @butterfly["image"] %>" placeholder="http://...">
	</label>

	<label>
		Larval Plant:
		<select name="plant_id">
			<option></option>
			<% Plant.all.each do |plant| %>
			<option value="<%= plant.id %>" <%= "selected" if plant.id == @butterfly.plant_id %>><%= plant.name %></option>
			<% end %>
		</select>
	</label>

	<button>Update Butterfly!</button>
</form>
