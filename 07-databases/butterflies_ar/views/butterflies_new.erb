<h2>New Butterfly</h2>

<form action="/butterflies"  method="post">
	<label>
		Name:
		<input type="text" name="name" placeholder="Butterfly Name" required autofocus>
	</label>

	<label>
		Family:
		<input type="text" name="family" placeholder="Butterfly Family Name">
	</label>

	<label>
		Image:
		<input type="url" name="image" placeholder="http://...">
	</label>

	<label>
		Larval Plant:
		<select name="plant_id">
			<% Plant.all.each do |plant| %>
				<option></option>
				<option value="<%= plant.id %>"><%= plant.name %></option>
			<% end %>
		</select>
	</label>

	<button>Create Butterfly!</button>
</form>
